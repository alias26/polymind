# 데이터베이스 설정
DATABASE_URL=postgresql://username:password@localhost:5432/polymind_db

# 보안 설정
SECRET_KEY=your_super_secret_key_here_at_least_32_characters_long
ENCRYPTION_KEY=your_encryption_key_for_api_keys_32_chars

# JWT 설정
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120
REFRESH_TOKEN_EXPIRE_DAYS=7

# 환경 설정
ENVIRONMENT=production
DEBUG=false

# CORS 설정 (쉼표로 구분된 도메인 목록)
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# 예시:
# ALLOWED_ORIGINS=https://polymind.vercel.app,https://polymind-app.netlify.app